<div class="content-header">
    <table cellspacing="0">
        <tr>
            <td style="width:50%;"><h3 class="icon-head head-products"><?php echo Mage::helper('catalog')->__('New Instagram Images') ?></h3></td>
            <td class="a-right">
                <?php echo $this->getButtonsHtml() ?>
            </td>
        </tr>
    </table>
</div>

<div>
    <?php foreach ($this->getCollection() as $image) : ?>
        <div class="item" id="<?php echo $image->getImageId(); ?>" style="width:150px;margin:10px; text-align:center; float:left;">
            <p><?php echo $this->htmlEscape($image->getTag()); ?></p>
            <img src="<?php echo $image->getThumbnailUrl(); ?>" />
            <br>
            <a style="float:left;" onclick="return approveImage('<?php echo $image->getImageId(); ?>','<?php echo $this->getUrl('*/instagram/approve'); ?>');" href="javascript:void(0);">Approve</a>
            <a style="float:right;" onclick="return deleteImage('<?php echo $image->getImageId(); ?>','<?php echo $this->getUrl('*/instagram/deleteimage'); ?>');" href="javascript:void(0);">Delete</a>
        </div>
    <?php endforeach; ?>
    <?php $nextUrl = Mage::getSingleton('core/session')->getNextUrl(); ?>
    <?php if (is_array($nextUrl) && array_key_exists($this->getRequest()->getParam('id'),$nextUrl) && !empty($nextUrl[$this->getRequest()->getParam('id')])): ?>
        <div class="item" style="width:150px;margin:10px; text-align:center; float:left;">
            <button style="height:150px;margin-top:25px" type="button" class="scalable add" onclick="setLocation('<?php echo $this->getUrl('*/*/update',array('id' => $this->getRequest()->getParam('id'))); ?>back/edit/')" title="Load More Images">
                <span><span><span><?php echo $this->__('Load More Images'); ?></span></span></span>
            </button>
        </div>
    <?php endif; ?>
    <div style="clear:both;"></div>
</div>
