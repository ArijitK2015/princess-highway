<?php if ($_products = $this->getRecentlyViewedProducts()->setPageSize(4)): ?>
<div class="block block-list block-viewed">
    <div class="block-content row">
        <?php foreach ($_products as $_item): ?>
            <div class="col-md-3 col-lg-3 col-xs-6 col-sm-4 text-center text-lowercase">
                <a href="<?php echo $this->getProductUrl($_item) ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>" class="product-image"><img class="img-responsive" src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(245,365) ?>" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" /></a>
                <h5 class="product-name"><a href="<?php echo $this->getProductUrl($_item) ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></h5>
                <?php echo $this->getPriceHtml($_item, true, '-recentlyviewed') ?>
                <?php //echo $this->getReviewsSummaryHtml($_link) ?>
            </div>
        <?php endforeach; ?>
    </div>
</div>
<?php endif; ?>
