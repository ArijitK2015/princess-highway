        <div class="dropdown">
            <button class="btn btn-default dropdown-toggle text-uppercase"
                    type="button"
                    id="currencyMenu"
                    data-toggle="dropdown"
                    aria-expanded="true">
                <strong>
                    <?php echo $this->getCurrentCurrencyCode() ?>
                </strong>
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu" aria-labelledby="currencyMenu">
                <?php foreach ($this->getCurrencies() as $code => $name): ?>
