<?php if($this->getCurrencyCount()>1): ?>
<div class="block block-currency hidden-xs">
    <div class="block-title text-uppercase hidden-sm">
        <span>
            <strong>
                <?php echo $this->__('Currency') ?>
            </strong>
        </span>
    </div>
