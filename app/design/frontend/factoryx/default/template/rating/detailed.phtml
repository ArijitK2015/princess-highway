<?php if(!empty($collection) && $collection->getSize()): ?>
    <div class="table-responsive">
        <table class="table ratings-table">
            <col width="1" />
            <col />
            <tbody>
                <?php foreach ($collection as $_rating): ?>
                    <?php if ($rating = $_rating->getSummary()):?>
                        <tr>
                            <th><?php echo $this->__($this->escapeHtml($_rating->getRatingCode())) ?></th>
                            <?php if (Mage::helper('framework')->isFaEnabled()):?>
                                <td class="text-right">
                                    <?php $count = round($rating / 20); ?>
                                    <?php $rest = 5 - $count; ?>
                                    <div class="rating-box">
                                        <?php for($i=0;$i<$count;$i++): ?>
                                            <i class="fa fa-star"></i>
                                        <?php endfor; ?>
                                        <?php for($i=0;$i<$rest;$i++): ?>
                                            <i class="fa fa-star-o"></i>
                                        <?php endfor; ?>
                                    </div>
                                </td>
                            <?php else: ?>
                                <td>
                                    <div class="rating-box">
                                        <div class="rating" style="width:<?php echo ceil($rating) ?>%;"></div>
                                    </div>
                                </td>
                            <?php endif; ?>
                        </tr>
                    <?php endif;?>
                <?php endforeach; ?>
            </tbody>
        </table>
    </div>
<?php endif; ?>
