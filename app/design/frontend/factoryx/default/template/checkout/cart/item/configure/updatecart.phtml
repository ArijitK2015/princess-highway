<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = $this->__('Update Cart'); ?>
<?php if ($_product->isSaleable()): ?>
    <div class="add-to-cart form-group">
        <div class="input-group">
            <?php if (!$_product->isGrouped()): ?>
                <input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo $this->__('Qty') ?>" placeholder="<?php echo $this->__('Qty') ?>" class="form-control input-text qty" />
                <span class="input-group-btn">
            <?php endif; ?>
            <button type="button" title="<?php echo $buttonTitle ?>" class="btn btn-default button btn-cart" onclick="productAddToCartForm.submit(this)"><span><span><?php if (Mage::helper('framework')->isFaEnabled()):?><i class="fa fa-refresh"></i><?php else: echo $buttonTitle; endif; ?></span></span></button>
            <?php if (!$_product->isGrouped()): ?>
                </span>
            <?php endif; ?>
            <?php echo $this->getChildHtml('', true, true) ?>
        </div>
    </div>
<?php endif; ?>
