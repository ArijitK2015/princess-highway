<div class="block block-subscribe panel panel-default">
    <div class="block-title panel-heading">
        <strong><span><?php echo $this->__('Newsletter') ?></span></strong>
    </div>
    <?php if (Mage::helper('campaignmonitor')->isMiniPopup()): ?>
        <div class="block-content panel-body">
            <div class="form-group">
                <div class="input-group">
                    <a data-toggle="modal" data-target="#subscribePopupModal" title="<?php echo $this->__('Subscribe') ?>" class="text-uppercase btn btn-primary button">
