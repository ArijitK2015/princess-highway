                <div class="form-group">
                    <div class="input-group">
                        <input type="text" name="email" id="newsletter" title="<?php echo $this->__('Sign up for our newsletter') ?>" placeholder="<?php echo $this->__('Sign up for our newsletter') ?>" class="form-control input-text required-entry validate-email" />
                        <?php
