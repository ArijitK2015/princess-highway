<div class="col-md-12 col-sm-12">
    <label for="<?php echo $this->getFieldId('month')?>"
        <?php if ($this->isRequired()) echo ' class="required chk_label"'; else echo ' class="chk_label"'; ?>>
         <?php echo $this->__('date of birth') ?>
         <?php if ($this->isRequired()) echo '<span>*</span>' ?>
    </label>
    <input class="login_input" placeholder="<?php echo $this->__('Date of Birth'); ?>" type="text"
           id="<?php echo $this->getFieldId('dob')?>"
           name="<?php echo $this->getFieldName('dob')?>" />
</div>
<script type="text/javascript">
