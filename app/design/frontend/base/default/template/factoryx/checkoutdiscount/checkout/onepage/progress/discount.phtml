<?php if ($this->isDiscountStepComplete()): ?>
    <dt class="complete">
        <?php echo $this->__('Discount Code') ?> <span class="separator">|</span>
        <a href="#vendor" onclick="checkout.gotoSection('discount'); return false;"><?php echo $this->__('Change') ?></a>
    </dt>
    <dd class="complete">
        <?php
        $quote = Mage::getSingleton('checkout/session')->getQuote();
        $couponCode = $quote->getCouponCode();
        ?>
        <?php if($couponcode):?>
            <strong><?php echo $couponcode; ?></strong>
        <?php else:?>
            <?php echo $this->__('There is no coupon code')?>
        <?php endif;?>
        <?php
        $giftCertificate = $quote->getGiftcertCode() ? $quote->getGiftcertCode() : false;
        ?>
        <?php if ($giftCertificate): ?>
            <p>
                <strong><?php echo $this->__('Gift Certificate') ?></strong>
            <?php $_gcs = explode(', ', $giftCertificate); ?>
            <?php foreach ($_gcs as $_i=>$_gc): ?>
                <p><?php echo $_gc ?> <a class="ugiftcert-remove" href="#" onclick="removeCoupon('<?php echo $this->getUrl('checkoutdiscount/index/remove', array('gc'=>$_gc)) ?>','<?php echo trim($_gc) ?>');" title="<?php echo $this->__('Remove')?>"><?php echo $this->__('Remove'); ?></a></p>
            <?php endforeach; ?>
            </p>
        <?php endif; ?>
    </dd>
<?php else: ?>
    <dt>
        <?php echo $this->__('Discount Code') ?>
    </dt>
<?php endif; ?>

