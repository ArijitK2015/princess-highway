<?xml version="1.0"?>

<layout version="0.1.0">
	<default>
		<reference name="catalog.topnav">
			<block type="lookbook/lookbook_navigation" name="lookbookNav" template="factoryx/lookbook/navigation.phtml" />
		</reference>
	</default>

    <lookbook_index_view>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/idangerous.swiper.css</name>
                <params/>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>css/factoryx/lookbook.css</name>
                <params/>
            </action>
            <action method="addJs">
                <script>effects/bubbleup.js</script>
            </action>
            <action method="addJs">
                <script>jquery/idangerous.swiper.min.js</script>
            </action>
        </reference>

        <reference name="content">
            <block type="lookbook/lookbook" name="lookbook" template="factoryx/lookbook/view.phtml" />
        </reference>
    </lookbook_index_view>
	
	<lookbook_index_slideshow>
		<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<name>css/factoryx/lookbook.css</name>
				<params/>
			</action>
			<action method="addItem">
				<type>skin_css</type>
				<name>css/jsCarousel-2.0.0.css</name>
				<params/>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/fadeslideshow.js</name>
				<params/>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/jsCarousel-2.0.0.js</name>
				<params/>
			</action>
		</reference>
		
		<reference name="root">
			<action method="setTemplate"><template>page/empty.phtml</template></action>
		</reference>
		
		<reference name="content">
			<block type="lookbook/lookbook" name="lookbook" template="factoryx/lookbook/slideshow.phtml" />
		</reference>
	</lookbook_index_slideshow>
	
	<lookbook_index_flipbook>
		<reference name="head">
			<action method="addJs">
				<script>jquery/turn.min.js</script>
			</action>
			<action method="addItem">
				<type>skin_css</type>
				<name>css/factoryx/lookbook.css</name>
				<params/>
			</action>
		</reference>
		
		<reference name="root">
			<action method="setTemplate"><template>page/1column.phtml</template></action>
		</reference>
		
		<reference name="content">
			<block type="lookbook/lookbook" name="lookbook" template="factoryx/lookbook/flipbook.phtml" />
		</reference>
	</lookbook_index_flipbook>
	
	<!-- facebook -->
    <lookbook_facebook_view>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/idangerous.swiper.css</name>
                <params/>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>css/factoryx/lookbook.css</name>
                <params/>
            </action>
            <action method="addJs">
                <script>effects/bubbleup.js</script>
            </action>
            <action method="addJs">
                <script>jquery/idangerous.swiper.min.js</script>
            </action>
        </reference>

        <reference name="content">
            <block type="lookbook/lookbook" name="lookbook" template="factoryx/lookbook/view.phtml" />
            <!--
            <block type="lookbook/facebook" name="lookbook" template="factoryx/lookbook/facebook.phtml" />
            -->
        </reference>
    </lookbook_facebook_view>	
</layout>