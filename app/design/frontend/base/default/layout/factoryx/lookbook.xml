<?xml version="1.0"?>

<layout version="0.1.0">
	<default>
		<reference name="catalog.topnav">
			<block type="lookbook/lookbook_navigation" name="lookbookNav" template="factoryx/lookbook/navigation.phtml" />
		</reference>
	</default>

	<lookbook_index_view>
		<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<name>css/factoryx/lookbook.css</name>
				<params/>
			</action>
			<action method="addJs">
				<script>effects/bubbleup.js</script>
			</action>
			<action method="addJs">
				<script>effects/scrolling-div.js</script>
			</action>
		</reference>
		
		<reference name="root">
			<action method="setTemplate"><template>page/1column.phtml</template></action>
		</reference>
		
		<reference name="content">
			<block type="lookbook/lookbook" name="lookbook" template="factoryx/lookbook/view.phtml" />
		</reference>
	</lookbook_index_view>
</layout>