<?xml version="1.0"?>

<layout version="0.1.0">

	<default>
		<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<name>css/factoryx/contests.css</name>
				<params/>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/factoryx/contests.js</name>
			</action>
		</reference>
		
		<reference name="footer">
			<block type="contests/contest_popup" name="contestPopup" template="factoryx/contests/popup.phtml" />
		</reference>
	</default>
	
	<contests_index_index>		
		<reference name="root">
			<action method="setTemplate"><template>page/1column.phtml</template></action>
		</reference>
		
		<reference name="content">
			<block type="contests/contest_list" name="contestList" template="factoryx/contests/list.phtml" />
		</reference>
	</contests_index_index>

	<contests_index_view>
		<reference name="head">
			<action method="addJs"><file>mage/captcha.js</file></action>
			<action method="addJs"><script>prototype/window.js</script></action>
			<action method="addItem"><type>js_css</type><name>prototype/windows/themes/default.css</name></action>
		</reference>
		
		<reference name="root">
			<action method="setTemplate"><template>page/1column.phtml</template></action>
		</reference>
		
		<reference name="content">
			<block type="contests/contest" name="contestForm" template="factoryx/contests/view.phtml">
				<!-- Add the Magento Captcha -->
				<block type="core/text_list" name="form.additional.info">
					<block type="captcha/captcha" name="captcha">
						<action method="setFormId"><formId>contests</formId></action>
						<action method="setImgWidth"><width>230</width></action>
						<action method="setImgHeight"><height>50</height></action>
					</block>
				</block>
			</block>
		</reference>
	</contests_index_view>

	<contests_index_list>
		<reference name="root">
			<action method="setTemplate"><template>page/1column.phtml</template></action>
		</reference>
		
		<reference name="content">
			<block type="contests/contest_list" name="contestList" template="factoryx/contests/list.phtml" />
		</reference>
	</contests_index_list>
	
	<contests_index_terms>
		<reference name="root">
			<action method="setTemplate"><template>page/basic.phtml</template></action>
		</reference>
		
        <reference name="content">
            <block type="contests/contest_terms" name="contest_terms" template="factoryx/contests/terms.phtml" />
        </reference>	
	</contests_index_terms>
	
	<contests_index_thankyou>
		<reference name="root">
			<action method="setTemplate"><template>page/1column.phtml</template></action>
		</reference>
		
        <reference name="content">
            <block type="contests/contest_thankyou" name="contest_thankyou" template="factoryx/contests/thankyou.phtml" />
        </reference>	
	</contests_index_thankyou>

<!-- FACEBOOK LAYOUT START -->
	<contests_facebook_view>
		<reference name="head">
			<action method="addJs"><file>mage/captcha.js</file></action>
			<action method="addJs"><script>prototype/window.js</script></action>
			<action method="addItem"><type>js_css</type><name>prototype/windows/themes/default.css</name></action>
			<action method="addItem"><type>skin_css</type><name>css/factoryx/contests-facebook.css</name></action>
		</reference>
		
		<reference name="root">
			<action method="setTemplate"><template>page/empty.phtml</template></action>
		</reference>
		
		<reference name="content">
			<block type="contests/contest" name="contestForm" template="factoryx/contests/view-facebook.phtml">
				<!-- Add the Magento Captcha -->
				<block type="core/text_list" name="form.additional.info">
					<block type="captcha/captcha" name="captcha">
						<action method="setFormId"><formId>contests</formId></action>
						<action method="setImgWidth"><width>230</width></action>
						<action method="setImgHeight"><height>50</height></action>
					</block>
				</block>
			</block>
		</reference>
	</contests_facebook_view>

	<contests_facebook_terms>
		<reference name="root">
			<action method="setTemplate"><template>page/empty.phtml</template></action>
		</reference>
		
        <reference name="content">
            <block type="contests/contest_terms" name="contest_terms" template="factoryx/contests/terms.phtml" />
        </reference>	
	</contests_facebook_terms>

	<contests_facebook_thankyou>
		<reference name="root">
			<action method="setTemplate"><template>page/empty.phtml</template></action>
		</reference>
		<reference name="head">
			<action method="addItem"><type>skin_css</type><name>css/factoryx/contests-facebook.css</name></action>
		</reference>
		
        <reference name="content">
            <block type="contests/contest_thankyou" name="contest_thankyou" template="factoryx/contests/thankyou-facebook.phtml" />
        </reference>	
	</contests_facebook_thankyou>

<!-- FACEBOOK LAYOUT END -->

</layout>