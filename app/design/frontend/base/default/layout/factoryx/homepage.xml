<?xml version="1.0"?>

<layout version="0.1.0">

	<default>
		<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<name>css/factoryx/homepage.css</name>
				<params/>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/slides.min.jquery.js</name>
			</action>
		</reference>
	</default>
	
	<homepage_index_preview>		
		<reference name="root">
			<action method="setTemplate"><template>page/1column.phtml</template></action>
		</reference>
		
		<reference name="content">
			<block type="homepage/homepage" name="content.homepage" />
		</reference>
	</homepage_index_preview>

</layout>