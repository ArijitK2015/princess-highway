<?xml version="1.0"?>
<layout version="0.1.0">

    <easyreview_front_postreviews>
        <reference name="head">
            <action method="addJs"><file>EasyReview.js</file></action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-right.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="EasyReview/Front_PostReviews" name="easyreview" as="easyreview" template="EasyReview/PostReview.phtml"/>
        </reference>
    </easyreview_front_postreviews>

</layout>