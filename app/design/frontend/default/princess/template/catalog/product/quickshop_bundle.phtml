$optionCollection = $this->getProduct()->getTypeInstance()->getOptionsCollection();
$selectionCollection = $this->getProduct()->getTypeInstance()->getSelectionsCollection($this->getProduct()->getTypeInstance()->getOptionsIds());
$options = $optionCollection->appendSelections($selectionCollection);
//Mage::log(count($options));
$sizeAttrs = array(
	9 => "size_clothing",
	10 => "size_pants",
	11 => "size_shoes",
	13 => "size_belts"
);

// Mage_Bundle_Model_Option
foreach($options as $option) {
	//Mage::log(sprintf("option->%s,%s", get_class($option), $option->getId()));
	$_selections = $option->getSelections();	
	//Mage::log(sprintf("_selections=%d", count($_selections)));
	if (count($_selections) == 0) {
		continue;
	}
	$simpleId = $option->getId(); //product_simple->getProductId();
	foreach($_selections as $selection) {
		$product_simple = Mage::getModel('catalog/product')->load($selection->getId());
		//Mage::log(sprintf("product_simple=%s", $product_simple->getAttributeSetId()));
		$colour = $product_simple->getAttributeText('colour');
		$sizeAttr = 'size_clothing';
		if (array_key_exists($product_simple->getAttributeSetId(), $sizeAttrs)) {
			$sizeAttr = $sizeAttrs[$product_simple->getAttributeSetId()];
		}
		$size = $product_simple->getAttributeText($sizeAttr);
		//Mage::log(sprintf("%s->var=%s", $sizeAttr, $size));
		$products['bundle_product'][$simpleId][$colour][$size]['colour'] = $colour;
		$products['bundle_product'][$simpleId][$colour][$size]['size'] = $size;
		$products['bundle_product'][$simpleId][$colour][$size]['price'] = $product_simple->getFinalPrice();
		$products['bundle_product'][$simpleId][$colour][$size]['default'] = 0;
		$products['bundle_product'][$simpleId][$colour][$size]['selectionid'] = $selection->getSelectionId();
		$parentIds = Mage::getResourceSingleton('catalog/product_type_configurable')->getParentIdsByChild($product_simple->getId());
		$products['bundle_img'][$simpleId][$colour]['img'] = "";
		//Mage::log(sprintf("parents=%d", count($parentIds)));

		$found = false;
		$labelColour = strtolower(preg_replace("/[\s\W]+/", "-", $colour));
		$match = sprintf("front_%s", $labelColour);
		foreach($parentIds as $parent) {
			$parentProduct = Mage::getModel('catalog/product')->load($parent);
			// Varien_Data_Collection
			$images = array_values($parentProduct->getMediaGalleryImages()->getItems());
			for ($i = 0; $i < count($images) && !$found; $i++) {
				$img = $images[$i];
				//Mage::log(sprintf("label:%s==%s", $img->getLabel(), $match));
				if ($img->getLabel() == $match) {
					//Mage::log(sprintf("match=%s", $img->getFile()));
					$a = (string)Mage::helper('catalog/image')->init($parentProduct, 'image', $img->getFile())->resize(75,75);
					//Mage::log($a);
					// use absolute paths
					$a = str_replace(Mage::getBaseUrl(), "/", $a);
					//Mage::log($a);
					$products['bundle_img'][$simpleId][$colour]['img'] = $a;
					$found = true;
				}
			}
		}
	}
}
