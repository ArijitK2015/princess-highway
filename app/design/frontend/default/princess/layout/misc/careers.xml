	<careers_index_index>

		<reference name="head">
			<action method="setTitle">
				<title>Careers</title>
			</action>
		</reference>
		
		<reference name="root">
			<action method="setTemplate"><template>page/1column.phtml</template></action>
		</reference>
		
		<reference name="content">
			<block type="misc/careers" name="careers" template="misc/careers.phtml">
				<!-- Add the careers image -->
				<block type="cms/block" name="careers-img">
					<action method="setBlockId"><block_id>careers-img</block_id></action>
				</block>
			</block>
		</reference>
				
	</careers_index_index>
</layout>
