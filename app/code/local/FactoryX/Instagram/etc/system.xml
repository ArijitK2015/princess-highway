<config>
    <tabs>
        <factoryx translate="label" module="instagram">
            <label>Factory X</label>
            <sort_order>101</sort_order>
        </factoryx>
    </tabs>

    <sections>
        <factoryx_instagram translate="label" module="instagram">
            <label>Instagram</label>
            <tab>factoryx</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <module_options translate="label" module="instagram">
                    <label>Module Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enabled>
                        <enable_jquery translate="label">
                            <label>Enable jQuery</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enable_jquery>
                        <enable_fontawesome translate="label">
                            <label>Enable FontAwesome</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enable_fontawesome>
                        <client_id translate="label comment">
                            <label>Instagram Client ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </client_id>
                        <client_secret translate="label comment">
                            <label>Instagram Client Secret</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>62</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </client_secret>
                        <client_permission translate="label comment">
                            <label>Permission</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>instagram/system_config_source_scopes</source_model>
                            <sort_order>63</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[All <a target='_blank' rel='noopener noreferrer' href='https://www.instagram.com/developer/authorization/'>permissions</a> require approval to be used out of <a target='_blank' href='https://www.instagram.com/developer/sandbox/'>Sandbox</a>.]]></comment>
                        </client_permission>
                        <user translate="label comment">
                            <label>Auth user</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>instagram/adminhtml_system_config_form_field_user</frontend_model>
                            <sort_order>65</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Auth user on Instagram</comment>
                        </user>
                        <proxy translate="label comment">
                            <label>Proxy</label>
                            <comment>E.g. 192.168.100.3:3128</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </proxy>
                    </fields>
                </module_options>
                <product_options translate="label" module="instagram">
                    <label>Product Page Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enabled>
                        <product translate="label comment">
                            <label>Show Images on Product Pages</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </product>
                        <product_limit translate="label comment">
                            <label>Max Number of Images to show on Product Page</label>
                            <comment>Zero or empty for no limit</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_limit>
                        <instruction translate="label comment">
                            <label>Instruction to display top of the image list</label>
                            <comment>#TAG will be replaced with the actual tag</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </instruction>
                        <style translate="label comment">
                            <label>Style</label>
                            <comment>Extra CSS</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </style>
                    </fields>
                </product_options>
                <debug>
                    <label>Debug Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_log translate="label">
                            <label>Enable Log</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enable_log>
                    </fields>
                </debug>
            </groups>
        </factoryx_instagram>
    </sections>

</config>