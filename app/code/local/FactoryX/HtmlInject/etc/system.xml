<?xml version="1.0"?>
<config>
    <tabs>
        <factoryx translate="label" module="htmlinject">
            <label>Factory X</label>
            <sort_order>100</sort_order>
        </factoryx>
    </tabs>
    <sections>
        <htmlinject translate="label" module="htmlinject">
            <label>HTML Inject</label>
            <tab>factoryx</tab>
            <sort_order>1001</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <phonesupport translate="label" module="westfield">
                    <label>Phone Support Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1001</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>                        
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <starttime translate="label">
                            <label>Start Time</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[<span class="notice">e.g. 17 means the pop up start displaying at 17:00</span>]]></comment>                            
                        </starttime>
                        <endtime translate="label">
                            <label>End Time</label>
                            <frontend_type>text</frontend_type>                        
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[<span class="notice">e.g. 22 means the pop up stop displaying at 22:00]]></comment>
                        </endtime>
                    </fields>
                </phonesupport>
            </groups>
        </htmlinject>
    </sections>
</config>