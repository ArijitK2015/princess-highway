<?xml version="1.0"?>
<config>
    <sections>
        <catalog translate="label" module="misc">
            <groups>
                <frontend translate="label">
                    <fields>
                        <viewallbydefault translate="label comment">
                            <label>View all by default ?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>When set to yes, product per page by defaut will be ignored</comment>
                        </viewallbydefault>
                        <gridx5_per_page_values translate="label comment">
                            <label>Grid x5 : Products per Page on Grid Allowed Values</label>
                            <comment>Comma-separated.</comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-per-page-value-list</validate>
                            <sort_order>501</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <list_mode separator=",">gridx5,grid-gridx5,list-gridx5,gridx5-list,gridx5-grid,grid-list-gridx5,list-grid-gridx5,gridx5-list-grid</list_mode>
                            </depends>
                        </gridx5_per_page_values>
                        <gridx5_per_page translate="label comment">
                            <label>Grid x5 : Products per Page on Grid Default Value</label>
                            <comment>Must be in the allowed values list.</comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-per-page-value</validate>
                            <sort_order>502</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <list_mode separator=",">gridx5,grid-gridx5,list-gridx5,gridx5-list,gridx5-grid,grid-list-gridx5,list-grid-gridx5,gridx5-list-grid</list_mode>
                            </depends>
                        </gridx5_per_page>
                        <gridx5_image_dimensions translate="label comment">
                            <label>Grid x5 : Image Dimensions</label>
                            <comment>width,height</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>503</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <list_mode separator=",">gridx5,grid-gridx5,list-gridx5,gridx5-list,gridx5-grid,grid-list-gridx5,list-grid-gridx5,gridx5-list-grid</list_mode>
                            </depends>
                        </gridx5_image_dimensions>
                        <replace_default_option_text translate="label comment">
                            <label>Replace default configurable option text with the attribute label</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>500</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>When set to yes, "Choose an Option..." will be replaced by the attribute label</comment>
                        </replace_default_option_text>
                        <position_text translate="label comment">
                            <label>'Position' text used in the sort by dropdown</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>501</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>By default, it's set to "Position"</comment>
                        </position_text>
                    </fields>
                </frontend>
                <price>
                    <fields>
                        <display_upsells_name translate="label">
                            <label>Display upsells product name on product page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </display_upsells_name>
                        <display_upsells_price translate="label">
                            <label>Display upsells product price on product page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </display_upsells_price>
                    </fields>
                </price>
            </groups>
        </catalog>
    </sections>
</config>