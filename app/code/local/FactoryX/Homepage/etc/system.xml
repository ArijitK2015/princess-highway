<?xml version="1.0"?>
<config>   
	<tabs>
        <factoryx translate="label" module="homepage">
            <label>Factory X</label>
            <sort_order>101</sort_order>
        </factoryx>
    </tabs> 
    <sections>
        <homepage translate="label" module="homepage">
            <label>Homepage</label>
            <tab>factoryx</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <options translate="label">
                    <label>Homepage Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>   
                     <fields>
                        <enable translate="label comment">
                            <label>Homepage via module</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>If set to No, the homepage will be generated via the CMS homepage content.</comment>
                        </enable>
                         <position translate="label">
                             <label>Homepage position compared to original content</label>
                             <frontend_type>select</frontend_type>
                             <source_model>homepage/system_config_source_position</source_model>
                             <sort_order>15</sort_order>
                             <show_in_default>1</show_in_default>
                             <show_in_website>1</show_in_website>
                             <show_in_store>1</show_in_store>
                         </position>
                         <cron_expr translate="label">
                             <label>Cron Schedule</label>
                             <frontend_type>text</frontend_type>
                             <sort_order>20</sort_order>
                             <show_in_default>1</show_in_default>
                             <show_in_website>1</show_in_website>
                             <show_in_store>1</show_in_store>
                         </cron_expr>
                         <allowed_themes translate="label">
                             <label>Allowed themes</label>
                             <frontend_type>multiselect</frontend_type>
                             <source_model>homepage/system_config_source_themes</source_model>
                             <sort_order>30</sort_order>
                             <show_in_default>1</show_in_default>
                             <show_in_website>1</show_in_website>
                             <show_in_store>1</show_in_store>
                         </allowed_themes>
                         <remove_base_url translate="label">
                             <label>Remove Base URL from links</label>
                             <frontend_type>select</frontend_type>
                             <source_model>adminhtml/system_config_source_yesno</source_model>
                             <sort_order>40</sort_order>
                             <show_in_default>1</show_in_default>
                             <show_in_website>1</show_in_website>
                             <show_in_store>1</show_in_store>
                         </remove_base_url>
                    </fields>                               
                </options>
            </groups>                   
        </homepage>
    </sections>   
</config>