	</adminhtml>

	<global>
	
		<models>
			<advertpanels>
				<class>FactoryX_AdvertPanels_Model</class>
			</advertpanels>
		</models>

		<catalog>
			<product>
				<type>
					<panel translate="label" module="advertpanels">
