<?xml version="1.0"?>
<config>

	<modules>
		<FactoryX_AdvertPanels>
			<version>0.2.0</version>
		</FactoryX_AdvertPanels>
	</modules>
	
	<frontend>
		<!-- Translation file -->
		<translate>
            <modules>
                <FactoryX_AdvertPanels>
                    <files>
                        <default>FactoryX_AdvertPanels.csv</default>
                    </files>
                </FactoryX_AdvertPanels>
            </modules>
        </translate>
	</frontend>
	
	<adminhtml>
		<translate>
			<modules>
				<FactoryX_AdvertPanels>
					<files>
						<default>FactoryX_AdvertPanels.csv</default>
					</files>
				</FactoryX_AdvertPanels>
			</modules>
