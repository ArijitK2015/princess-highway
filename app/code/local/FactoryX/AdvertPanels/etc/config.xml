						<model>advertpanels/product_type_panel</model>
						<is_qty>1</is_qty>
					</panel>
				</type>
			</product>
		</catalog>

		<helpers>
			<advertpanels>
				<class>FactoryX_AdvertPanels_Helper</class>
			</advertpanels>
		</helpers>
		
