<config>
    <modules>
        <FactoryX_ColorMapping>
            <version>0.1.7</version>
        </FactoryX_ColorMapping>
    </modules>
    <global>
        <blocks>
            <colormapping>
                <class>FactoryX_ColorMapping_Block</class>
            </colormapping>
        </blocks>
		<helpers>
            <colormapping>
                <class>FactoryX_ColorMapping_Helper</class>
            </colormapping>
        </helpers>
    </global>
	<default>
		<colormapping>
			<options>               
				<enable>1</enable>
				<base_colour>colour_base</base_colour>
				<colour>colour_description</colour>
			</options>
		</colormapping>
	</default>
    <phpunit>
        <suite>
            <modules>
                <FactoryX_ColorMapping/>
            </modules>
        </suite>
    </phpunit>
</config>